<Window x:Class="order_processing.OrderEditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Редактирование заказа" FontWeight="Bold" FontSize="16"/>

            <TextBlock Text="Название товара:"/>
            <TextBlock x:Name="ProductTitleTextBlock" Margin="0,5,0,10" FontWeight="Bold"/>

            <TextBlock Text="Поставщик:"/>
            <ComboBox x:Name="SupplierComboBox" Margin="0,5,0,10"/>

            <TextBlock Text="Количество товара:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5,0,10" />

            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
